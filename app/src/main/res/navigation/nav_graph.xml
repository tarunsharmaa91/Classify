    android:id="@+id/nav_graph"
    app:startDestination="@id/adList">

    <fragment
        android:id="@+id/adList"
        android:name="com.app.classify.list.AdList"
        android:label="fragment_list"
        tools:layout="@layout/ad_list_fragment">
